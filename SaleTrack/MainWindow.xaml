<Window x:Class="SaleTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaleTrack" Height="650" Width="950"
        Background="#E0E5EC" 
        FontFamily="Segoe UI Variable Text"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- The "Beveled" Ceramic Style for Containers -->
        <Style x:Key="CeramicPanel" TargetType="Border">
            <Setter Property="Background" Value="#E0E5EC"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <!-- Dark Shadow (Bottom Right) -->
                    <DropShadowEffect BlurRadius="15" Direction="315" ShadowDepth="6" Opacity="0.3" Color="#A3B1C6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ceramic Button: simplified to avoid Template setter issues -->
        <Style x:Key="CeramicButton" TargetType="Button">
            <Setter Property="Background" Value="#E0E5EC"/>
            <Setter Property="Foreground" Value="#444444"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Inset (Sunken) TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#EDF3FA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Beveled Section -->
        <Border Style="{StaticResource CeramicPanel}" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="SCAN BARCODE" FontSize="10" FontWeight="Black" Foreground="#778899" Margin="0,0,0,5"/>
                    <Border CornerRadius="8" Background="#E0E5EC" BorderThickness="1" BorderBrush="#F0F5FF">
                        <TextBox x:Name="BarcodeTextBox"  Width="300" KeyDown="BarcodeTextBox_KeyDown"/>
                    </Border>
                </StackPanel>
                <Button x:Name="LookupButton" Style="{StaticResource CeramicButton}" Content="LOOKUP" Margin="20,15,0,0" Click="LookupButton_Click" Background="#AED0FF"/>
            </StackPanel>
        </Border>

        <!-- Middle Beveled Section -->
        <Border Style="{StaticResource CeramicPanel}" Grid.Row="1">
            <UniformGrid Columns="4">
                <StackPanel Margin="5">
                    <TextBlock Text="PRODUCT" FontSize="10" FontWeight="Black" Foreground="#778899"/>
                    <TextBox x:Name="NameTextBox" Background="#EDF3FA"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="PRICE" FontSize="10" FontWeight="Black" Foreground="#778899"/>
                    <TextBox x:Name="UnitPriceTextBox" Background="#EDF3FA"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="QTY" FontSize="10" FontWeight="Black" Foreground="#778899"/>
                    <TextBox x:Name="QuantityTextBox" KeyDown="QuantityTextBox_KeyDown" Background="#EDF3FA"/>
                    <!-- Added CheckBox referenced in code-behind -->
                    <CheckBox x:Name="AllowDecimalCheck" Content="Allow decimal quantity" Margin="0,6,0,0"/>
                </StackPanel>
                <Button x:Name="AddSaleButton" Style="{StaticResource CeramicButton}" Content="ADD SALE" VerticalAlignment="Bottom" Height="40" Click="AddSaleButton_Click" Background="#AED0FF"/>
            </UniformGrid>
        </Border>

        <!-- Sunken Data Table Section -->
        <Border CornerRadius="20" Background="#E0E5EC" Margin="15" Grid.Row="2" Padding="10">
            <Border.Effect>
                <!-- Inner shadow simulation for "sunken" ceramic look -->
                <DropShadowEffect BlurRadius="10" Direction="135" ShadowDepth="4" Opacity="0.2" Color="White"/>
            </Border.Effect>
            <DataGrid x:Name="SalesGrid" Background="Transparent" BorderThickness="0" RowHeight="45" AutoGenerateColumns="False">
                <!-- DataGrid column styling remains same as previous modern example -->
            </DataGrid>
        </Border>
    </Grid>
</Window>
